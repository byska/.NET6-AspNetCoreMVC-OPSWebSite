@model UpdatePasswordVM
@{
    ViewData["Title"] = "Şifre Güncelleme";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

@if (ViewData["userPasswordUpdateResult"] != null)
{
    <script>
        alert(@ViewData["userPasswordUpdateResult"]);
    </script>
}
@if (ViewData["userPasswordUpdateError"] != null)
{
    <script>
        alert(@ViewData["userPasswordUpdateError"]);
    </script>
}
<div>
    <div class="menuUserProfile">
        <h2>HESABIM</h2>
        <ul>
            <li><a asp-action="UserProfile" asp-controller="Profile">Kişisel Bilgileriniz</a></li>
            <li><a asp-action="GetUserAddress" asp-controller="Profile">Adresler</a></li>
            <li><a asp-action="GetUserOrder" asp-controller="Profile">Siparişler</a></li>
            <li><a asp-action="UpdatePassword" asp-controller="Profile">Şifre Değiştir</a></li>
            <li><a asp-action="GetUserComment" asp-controller="Profile">Yorumlarım</a></li>
        </ul>
    </div>

    <section class="login-area section-padding-100 row gy-4 mt-1 loginRegisterOps">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content">
                        <h3>Şifre Sıfırlama</h3>
                        <!-- Login Form -->
                        <div class="login-form">
                            <form asp-action="UpdatePassword" asp-controller="Profile" method="post" class="contactFormOps">
                                <div class="text-danger"></div>
                               
                                <div class="form-group">
                                    <label>Eski Şifreniz</label>
                                    <input asp-for="OldPassword" type="password" class="form-control" id="oldPassword">
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Yeni Şifreniz</label>
                                    <input asp-for="Password" type="password" class="form-control" id="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Yeni Şifreniz Tekrar</label>
                                    <input asp-for="PasswordRetry" type="password" class="form-control" id="passwordRetry">
                                    <span asp-validation-for="PasswordRetry" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-warning-outline ">Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>