
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
@model MessageCreateVM
@if(TempData["result"] !=null)
{
    <script>
        alert("@TempData["result"]");
       </script>
}


<section class="contact-area section-padding-100-0">
    <div class="container">
        <div class="row">

            <div class="col-12 col-lg-3">
                <div class="contact-content mb-100">
                    <!-- Title -->
                    <div class="contact-title mb-50">
                        <h5>İletişim Bilgileri</h5>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-smartphone"></span>
                        </div>
                        <p>0543 745 0620</p>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-mail"></span>
                        </div>
                        <p>orangepressstore@gmail.com</p>
                    </div>

                    <!-- Contact Social Info -->
                    <div class="contact-social-info mt-50">
                        <a href="https://www.instagram.com/orangepressstore/" data-toggle="tooltip" data-placement="top" title="Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                        <a href="https://www.trendyol.com/magaza/orange-press-store-m-877656?sst=0" data-toggle="tooltip" data-placement="top" title="Trendyol"><i class="fa fa-dribbble" aria-hidden="true"></i></a>
                    </div>

                </div>
            </div>

            <div class="col-12">
                <div class="section-heading">
                    <h2>BİZE ULAŞIN!</h2>
                </div>
            </div>
        </div>

        <form asp-action="Contact" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="text-black">İsim Soyisim</label>
                        <input asp-for="Name" type="text" class="form-control" id="fname">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="text-black" >Konu</label>
                        <input asp-for="Subject" type="text" class="form-control" id="lname">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-black">E-mail</label>
                <input asp-for="Email" type="email" class="form-control" id="email">
            </div>

            <div class="form-group mb-5">
                <label class="text-black">Mesajınız</label>
                <textarea asp-for="Description" name="" class="form-control" id="message" cols="30" rows="5"></textarea>
            </div>

            <button type="submit" class="btn btn-primary-hover-outline">Gönder</button>
        </form>
      
    </div>
</section>
<!-- ##### Contact Area End ##### -->


