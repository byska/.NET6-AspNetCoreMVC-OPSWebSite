@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

@model List<ProductVM>
@{
    CategoryVM category = ViewBag.Category as CategoryVM;
}


<div id="fh5co-product">
	<div class="container">
		<div class="opsProduct">
			<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
				<span>Ürünler</span>
                <h2>@category.Name</h2>
			</div>
		</div>
        
		<div class="row">
            @foreach (var item in Model)
            {
			<div class="col-md-4 text-center animate-box">
				<div class="product">
                        <div  class="product-grid" style="background-image:url(/img/@item.Photo);">
                            <div class="inner">
							<p>
                                    <a asp-controller="Shopping" asp-action="AddItemCart" asp-route-id="@item.Id" class="icon"><i class="icon-shopping-cart"></i></a>
                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id" class="icon"><i class="icon-eye"></i></a>
							</p>
						    </div>
				        </div>
					<div class="desc">
						<h3><a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h3>
						<span class="price">@item.Price</span>
					</div>
			    </div>
		    </div>
            }
    	</div>
       
		
       
	</div>
</div>
