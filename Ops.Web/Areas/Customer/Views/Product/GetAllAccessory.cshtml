@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

@{
    CategoryVM category = ViewBag.category as CategoryVM;
    CategoryVM category1 = ViewBag.category1 as CategoryVM;
    CategoryVM category2 = ViewBag.category2 as CategoryVM;
    List<ProductVM> accessory = ViewBag.accessory as  List<ProductVM>;
    List<ProductVM> accessory1 = ViewBag.accessory1 as  List<ProductVM>;
    List<ProductVM> accessory2 = ViewBag.accessory2 as  List<ProductVM>;
}
<div id="fh5co-product">
    <div class="container">
        <div class="opsProduct">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <span>Ürünler</span>
                <h2>Aksesuarlar</h2>
            </div>
        </div>

        <div class="row">
            <h2>@category.Name</h2>
            @foreach (var item in accessory)
            {
                <div class="col-md-4 text-center animate-box">
                    <div class="product">
                        <div class="product-grid" style="background-image:url(/img/@item.Photo);">
                            <div class="inner">
                                <p>
                                    <a href="single.html" class="icon"><i class="icon-shopping-cart"></i></a>
                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id" class="icon"><i class="icon-eye"></i></a>
                                </p>
                            </div>
                        </div>
                        <div class="desc">
                            <h3><a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h3>
                            <span class="price">@item.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <h2>@category1.Name</h2>
            @foreach (var item in accessory1)
            {
                <div class="col-md-4 text-center animate-box">
                    <div class="product">
                        <div class="product-grid" style="background-image:url(/img/@item.Photo);">
                            <div class="inner">
                                <p>
                                    <a href="single.html" class="icon"><i class="icon-shopping-cart"></i></a>
                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id" class="icon"><i class="icon-eye"></i></a>
                                </p>
                            </div>
                        </div>
                        <div class="desc">
                            <h3><a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h3>
                            <span class="price">@item.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <h2>@category2.Name</h2>
            @foreach (var item in accessory2)
            {
                <div class="col-md-4 text-center animate-box">
                    <div class="product">
                        <div class="product-grid" style="background-image:url(/img/@item.Photo);">
                            <div class="inner">
                                <p>
                                    <a href="single.html" class="icon"><i class="icon-shopping-cart"></i></a>
                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id" class="icon"><i class="icon-eye"></i></a>
                                </p>
                            </div>
                        </div>
                        <div class="desc">
                            <h3><a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h3>
                            <span class="price">@item.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<script>
    function redirectToProductDetail(productId) {
        window.location.href = '/Customer/Product/Detail/' + productId;
    }
</script>