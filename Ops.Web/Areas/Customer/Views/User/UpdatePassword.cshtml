@model UpdatePasswordVM
@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<section class="login-area section-padding-100 row gy-4 mt-1 loginRegisterOps">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Şifre Yenile</h3>
                    <div class="login-form">
                        <form asp-action="Login" asp-controller="User" method="post" class="contactFormOps ">
                            <div class="text-danger"></div>
                            <div class="form-group">
                                <label>Şifre</label>
                                <input asp-for="Password" type="password" class="form-control" id="password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-warning-outline">Şifremi Yenile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
